<div class="page__auth-simple ">
  <h1>Forgot your password?</h1>
  <%= f = form_for @form, Routes.forgot_password_path(@socket, :create) %>
    <div class="form__container">
      <label for="email">Enter your user email address and we will send you a password reset link.</label>
      <%= email_input f, :email %>
    </div>
    <button phx-disable-with="sending..." type="submit">Send email</button>
  </form>
</div>
